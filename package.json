{
  "name": "web",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack -H 127.0.0.1",
    "dev:lan": "next dev --turbopack -H 0.0.0.0",
    "build": "next build",
    "start": "next start -H 127.0.0.1",
    "start:lan": "next start -H 0.0.0.0",
    "lint": "biome check .",
    "lint:ci": "bun run lint",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "generate": "prisma generate",
    "db:generate": "prisma generate",
    "db:setup": "prisma migrate deploy",
    "db:backup": "bash scripts/db-backup.sh",
    "db:restore": "bash scripts/db-restore.sh",
    "db:backup:list": "ls -1t backups/homework-*.db 2>/dev/null || echo 'No backups found'",
    "docker:up": "docker compose up -d --build",
    "docker:down": "docker compose down",
    "docker:down:volumes": "docker compose down && rm -f prisma/homework.db prisma/homework.db-shm prisma/homework.db-wal",
    "docker:logs": "docker compose logs -f homework",
    "docker:restart": "docker compose restart homework",
    "docker:ps": "docker compose ps",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:run": "bun run test",
    "test:coverage": "vitest run --coverage",
    "verify": "bun run lint && bun run test && bun run build"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^3.0.40",
    "@prisma/client": "5",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-tooltip": "^1.2.8",
    "ai": "^6.0.78",
    "cheerio": "^1.1.2",
    "clsx": "^2.1.1",
    "lucide-react": "^0.562.0",
    "metascraper": "^5.49.7",
    "metascraper-author": "^5.49.7",
    "metascraper-date": "^5.49.7",
    "metascraper-description": "^5.49.7",
    "metascraper-image": "^5.49.7",
    "metascraper-publisher": "^5.49.7",
    "metascraper-title": "^5.49.7",
    "next": "15.3.8",
    "prisma": "5",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-masonry-css": "^1.0.16",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitest/coverage-v8": "^4.0.18",
    "tailwindcss": "^4",
    "typescript": "^5",
    "vitest": "^4.0.18"
  },
  "trustedDependencies": ["unrs-resolver", "@biomejs/biome"]
}
